# Values
COLUMNS="${COLUMNS:-$(tput cols)}"


# Start
for text in "${@:-${HR_DEFAULT_TEXT:-─}}"; do
	printf '%*s' "$COLUMNS" | sed -e "s/ /$text/g" -e "s/^\(.\{$COLUMNS\}\).*/\1/"
done


exit 0
